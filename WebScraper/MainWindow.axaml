<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:WebScraper.Models" 
        x:Class="WebScraper.MainWindow"
        Title="WebScraper"
        x:DataType="vm:MainWindowViewModel"  Height="600" Width="800">
    
    <DataGrid Grid.Row="1" 
              ItemsSource="{Binding Songs}" 
              AutoGenerateColumns="False">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Назва" Binding="{Binding Title}"/>
            <DataGridTextColumn Header="Виконавець" Binding="{Binding ArtistName}"/>
            <DataGridTextColumn Header="Альбом" Binding="{Binding AlbumName}"/>
            <DataGridTextColumn Header="Тривалість" Binding="{Binding Duration}"/>
        </DataGrid.Columns>
    </DataGrid>
</Window>